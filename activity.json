{
  "name": "avgTemp",
  "version": "0.0.1",
  "type": "flogo:activity",
  "description": "activity description",
  "title": "Calc avg temp in the global attributes",
  "ref": "github.com/kasim/avgTemp",
  "author": "Steven Chu <chu.chongmeng@gmail.com>",
  "inputs":[
    {
      "name": "attributes",
      "type": "array",
      "required": true
    },
    {
      "name": "operator",
      "type": "string",
      "required": true,
      "allowed": ["GT", "GE", "EQ", "LT", "LE"]
    },
    {
      "name": "threshold",
      "type": "number",
      "required": true
    }
  ],
  "outputs": [
    {
      "name": "result",
      "type": "bool"
    }
  ]
}
